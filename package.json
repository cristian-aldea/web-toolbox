{
  "name": "web-toolbox",
  "scripts": {
    "_build-clean": "recursive-delete dist",
    "_build-js-dev": "rollup --config rollup.config.dev.js",
    "_build-js-prod": "rollup --config rollup.config.prod.js",
    "_build-css-dev": "sass src/scss/main.scss:dist/css/main.css --style expanded",
    "_build-css-prod": "sass src/scss/main.scss:dist/css/main.css --style compressed --no-source-map",
    "_build-copy": "recursive-copy 'src/copy' 'dist'",
    "_watch-js": "chokidar './src/ts/**/*.*' -c 'npm run _build-js-dev'",
    "_watch-css": "chokidar './src/scss/**/*.*' -c 'npm run _build-css-dev'",
    "_watch-copy": "chokidar './src/copy/**/*.*' -c 'npm run _build-copy'",
    "_build-dev": "npm run _build-clean && npm-run-all -p _build-js-dev _build-css-dev _build-copy",
    "_watch": "npm-run-all -p _watch-js _watch-css _watch-copy",
    "_serve": "browser-sync start --port 8080 --server dist --files 'dist/**/*.*'",
    "build": "npm run _build-clean && npm-run-all -p _build-js-prod _build-css-prod _build-copy",
    "start": "npm run _build-dev && npm-run-all -p _watch _serve",
    "update": "npx npm-check-updates -u && npm i",
    "lint": "eslint src/ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "browser-sync": "^2.27.9",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.12.0",
    "npm-run-all": "^4.1.5",
    "recursive-fs": "^2.1.0",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.9",
    "typescript": "^4.6.3"
  }
}
