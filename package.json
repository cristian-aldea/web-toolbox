{
  "name": "web-toolbox",
  "scripts": {
    "step-clean": "recursive-delete dist",
    "step-js-dev": "rollup --config rollup.config.dev.js",
    "step-js-prod": "rollup --config rollup.config.prod.js",
    "step-css-dev": "sass src/scss/main.scss:dist/css/main.css --style expanded",
    "step-css-prod": "sass src/scss/main.scss:dist/css/main.css --style compressed --no-source-map",
    "step-img": "rm -rf dist/img && mkdir -p dist/img && jpegoptim -o -d ./dist/img ./src/img/*",
    "step-svg": "svgo -r -f src/svg/ -o dist/svg",
    "step-copy": "recursive-copy 'src/copy' 'dist'",
    "build-dev": "npm run step-clean && npm-run-all -p step-js-dev step-css-dev step-img step-svg step-copy",
    "build-prod": "npm run step-clean && npm-run-all -p step-js-prod step-css-prod step-img step-svg step-copy",
    "watch-js": "chokidar './src/ts/**/*.*' -c 'npm run step-js-dev'",
    "watch-css": "chokidar './src/scss/**/*.*' -c 'npm run step-css-dev'",
    "watch-img": "chokidar './src/img/**/*.*' -c 'npm run step-img'",
    "watch-svg": "chokidar './src/svg/**/*.*' -c 'npm run step-svg'",
    "watch-copy": "chokidar './src/copy/**/*.*' -c 'npm run step-copy'",
    "watch": "npm-run-all -p watch-js watch-css watch-img watch-svg watch-copy",
    "serve": "browser-sync start --port 8080 --server dist --files 'dist/**/*.*'",
    "start": "npm run build-dev && npm-run-all -p watch serve",
    "update": "npx npm-check-updates -u && npm i",
    "lint": "eslint src/ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "browser-sync": "^2.27.7",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.1.0",
    "jpegoptim-bin": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "recursive-fs": "^2.1.0",
    "rollup": "^2.58.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.43.4",
    "svgo": "^2.7.0",
    "typescript": "^4.4.4"
  }
}
